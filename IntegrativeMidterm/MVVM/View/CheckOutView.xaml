<UserControl x:Class="IntegrativeMidterm.MVVM.View.CheckOutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IntegrativeMidterm.MVVM.View"
             xmlns:viewModel="clr-namespace:IntegrativeMidterm.MVVM.ViewModel"
             xmlns:Components="clr-namespace:IntegrativeMidterm.userControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModel:CheckOutViewModel/>
    </UserControl.DataContext>

    <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Left Panel-->
        <Grid Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="0.15*"/>
                <RowDefinition Height="0.15*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <Border 
                Grid.Row="0"
                Width="550"
                    Height="50"
                    Background="Gray"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10"
                    />

            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center"
                
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">


                <Border 
                Grid.Row="1"
                Width="100"
                    Height="50"
                    Background="Lime"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10"
                    />

                <Border 
                Grid.Row="1"
                Width="100"
                    Height="50"
                    Background="Lime"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10"
                    />

                <Border 
                Grid.Row="1"
                Width="100"
                    Height="50"
                    Background="Lime"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10"
                    />
            </StackPanel>


            <!--Main-->

            <ItemsControl
                Grid.Row="2"
                ItemsSource="{Binding SupplyItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Components:SupplyItems/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>

        </Grid>


        <!--Right Panel-->
        <Grid Grid.Row="1"
                Grid.Column="1">


            <Grid Grid.Column="1"
                  Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="8*"/>
                </Grid.RowDefinitions>

                <StackPanel HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">

                    <TextBlock Text="Product"
                               FontSize="21"
                               Width="120"
                               TextAlignment="Center"/>

                    <TextBlock Text="Price"
                               FontSize="21"
                               Width="95"
                               TextAlignment="Center"/>

                    <TextBlock Text="Quantity"
                               FontSize="21"
                               Width="120"
                               TextAlignment="Center"/>
                </StackPanel>

                <ItemsControl
                Grid.Row="1"
                ItemsSource="{Binding SupplyItems}"
                    HorizontalAlignment="Center">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Components:CheckoutItems/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </Grid>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="0.2*"/>
                </Grid.RowDefinitions>







                <Border 
                    Grid.Row="1"
                    Width="300"
                    Height="60"
                    Background="Pink"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10"
                    />


                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">


                    <Border 
                    Grid.Row="1"
                    Width="170"
                    Height="60"
                    Background="Green"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10"
                    />

                    <Border 
                    Grid.Row="1"
                    Width="120"
                    Height="60"
                    Background="Maroon"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10"
                    />

                </StackPanel>



            </Grid>



        </Grid>

    </Grid>
</UserControl>
