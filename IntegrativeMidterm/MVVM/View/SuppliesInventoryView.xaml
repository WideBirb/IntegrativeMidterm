<UserControl
    x:Class="IntegrativeMidterm.MVVM.View.SuppliesInventoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IntegrativeMidterm.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:IntegrativeMidterm.MVVM.ViewModel"
    x:Name="root"
    HorizontalAlignment="Center"
    VerticalAlignment="Stretch"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <viewModel:SuppliesInventoryViewModel />
    </UserControl.DataContext>

    <Grid Margin="0,45,0,0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>


        <DataGrid
            Grid.Column="0"
            Width="600"
            Height="625"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle}"
            FontSize="17"
            ItemsSource="{Binding SupplyItems}"
            RowStyle="{DynamicResource DataGridRowStyle}"
            SelectedItem="{Binding SelectedItem}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="1*"
                    Binding="{Binding PetSupplyID}"
                    Header="Item ID"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="1*"
                    Binding="{Binding PetSupplyName}"
                    Header="Name" />
                <DataGridTextColumn
                    Width="1*"
                    Binding="{Binding Quantity}"
                    Header="Quantity" />
                <DataGridTextColumn
                    Width="1*"
                    Binding="{Binding Price}"
                    Header="Price" />
                <DataGridTextColumn
                    Width="1*"
                    Binding="{Binding Species}"
                    Header="Pet Type" />
                <DataGridTextColumn
                    Width="1*"
                    Binding="{Binding ImagePath}"
                    Header="Pet Type" />
            </DataGrid.Columns>
        </DataGrid>


        <Grid Grid.Column="1" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackPanel
                x:Name="TextBoxContainer"
                Grid.Column="1"
                Margin="35,10,0,15"
                HorizontalAlignment="Right"
                VerticalAlignment="Top">

                <Label
                    Width="250"
                    Content="   ENTER DATA"
                    FontSize="25"
                    Foreground="White" />

                <Label
                    Width="250"
                    Content="Item ID"
                    FontSize="18"
                    Foreground="White" />
                <TextBox
                    x:Name="ItemIDTextBox"
                    Width="250"
                    Margin="5,0,5,15"
                    Background="Gray"
                    FontSize="18"
                    IsReadOnly="True" />
                <Label
                    Content="Name"
                    FontSize="18"
                    Foreground="White" />
                <TextBox
                    x:Name="NameTextBox"
                    Width="250"
                    Margin="5,0,5,15"
                    FontSize="18" />
                <Label
                    Content="Quantity"
                    FontSize="18"
                    Foreground="White" />
                <TextBox
                    x:Name="QuantityTextBox"
                    Width="250"
                    Margin="5,0,5,15"
                    FontSize="18"
                    PreviewTextInput="QuantityTextBox_PreviewTextInput" />
                <Label
                    Content="Price"
                    FontSize="18"
                    Foreground="White" />
                <TextBox
                    x:Name="PriceTextBox"
                    Width="250"
                    Margin="5,0,5,15"
                    FontSize="18"
                    PreviewTextInput="PriceTextBox_PreviewTextInput" />

                <Label
                    Content="Pet Type"
                    FontSize="18"
                    Foreground="White" />
                <TextBox
                    x:Name="PetTypeTextBox"
                    Width="250"
                    Margin="5,0,5,15"
                    FontSize="18" />

                <Label
                    Content="Image URL"
                    FontSize="18"
                    Foreground="White" />
                <TextBox
                    x:Name="ImageURLTextBox"
                    Width="250"
                    Margin="5,0,5,15"
                    FontSize="18" />
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                Margin="35,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <Button
                    Name="Hello"
                    Width="125"
                    Height="50"
                    Margin="0,0,0,0"
                    Command="{Binding AddCommand}"
                    CommandParameter="{Binding ElementName=root}"
                    Content="ADD"
                    Style="{StaticResource PrimaryButtonStyle}" />
                <Button
                    Width="125"
                    Height="50"
                    Margin="0,10,0,0"
                    Command="{Binding DeleteCommand}"
                    Content="DELETE"
                    Style="{StaticResource SecondaryButtonStyle}" />
            </StackPanel>



        </Grid>


    </Grid>
</UserControl>
