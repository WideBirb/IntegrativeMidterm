<UserControl x:Class="IntegrativeMidterm.userControl.SupplyItems"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IntegrativeMidterm.userControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Margin="5" BorderBrush="LightGray" BorderThickness="1" Background="LightGray">
        <StackPanel Height="60" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Image Source="{Binding ImagePath}" Width="60" Height="60" Stretch="Fill" Margin="15,0,15,0"/>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Width="120">
                <TextBlock Text="{Binding Name}" TextAlignment="Center"/>
                <TextBlock Text="{Binding ItemID}" TextAlignment="Center"/>
            </StackPanel>
            <TextBlock Text="{Binding Price}" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" Margin="10,0,10,0" Width="50"/>
            <Button Height="55" Width="75" Content="ADD" Margin="10,0,10,0"/>
        </StackPanel>
    </Border>
</UserControl>
